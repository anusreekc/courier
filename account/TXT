class ShipHome(TemplateView):
    # def get(self,request):
    #     return render(request,"shippingdata.html") 
    template_name="shippingdata.html"
    def post(self,request,*args,**kwargs):
    
        goodscaty=request.POST.get("goods")
        shipvalue=request.POST.get("price")
        weight=request.POST.get("wgt")
        
        delcity=request.POST.get("city")
        shipaddr=request.POST.get("addr")
        # Shippingdata.objects.create(Goodscategory=goodscaty,shipvalue=shipvalue,delcity=delcity,shippingaddr=shipaddr)
        if goodscaty in d1:
            
            x=d1[goodscaty]
            pr=x*weight
            print(x)
            print(pr)
            print(anusree)
            Shippingdata.objects.create(Goodscategory=goodscaty,delcity=delcity,shippingaddr=shipaddr,weight=weight,price=pr,shipvalue=shipvalue)
        else :
             Shippingdata.objects.create(Goodscategory=goodscaty,delcity=delcity,shippingaddr=shipaddr,weight=weight,shipvalue=shipvalue) 

            
        # messages.success(request,"order placed successfully")
        return redirect("home")
    
